{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "SQL-CONNECTION-STRING"
  },
  "SwaggerSettings": {
    "Title": "v1",
    "Name": "Example Swagger",
    "Enabled": true,
    "Version": "v1",
    "Description": "",
    "Security": {
      "Enabled": true,
      "Name": "example authentication",
      "Scopes": {
        "scope": "description"
      }
    }
  },
  "SecuritySettings": {
    "ApiName": "example-webapi",
    "IsDevelopment": true,
    "AzureB2C": {
      "Instance": "B2C_INSTANCE",
      "ClientId": "B2C_INSTANCE_CLIENT_ID",
      "Domain": "B2C_INSTANCE_DOMAIN",
      "SignedOutCallbackPath": "/signout/B2C_1_login",
      "SignUpSignInPolicyId": "b2c_1_login",
      "ResetPasswordPolicyId": "b2c_1_reset",
      "EditProfilePolicyId": "b2c_1_edit" // Optional profile editing policy
      //"CallbackPath": "/signin/B2C_1_sign_up_in"  // defaults to /signin-oidc
    }
  },
  "CorsSettings": {
    "DefaultPolicy": "_corsPolicy",
    "Policies": [
      {
        "Name": "_corsPolicy",
        "Origins": {
          "ReactHttp": "ORIGIN"
        }
      }
    ]
  }
}
